EDITOR="vim --noplugin"
SVN_EDITOR="vim --noplugin"
LSCOLORS="Exfxcxdxbxegedabagacad"

GWT_EXTERNAL_BROWSER="firefox"

LOCAL="$HOME/Local"

ANT_HOME="$LOCAL/ant"
APPENGINE_HOME="$LOCAL/appengine-java-sdk"
GRAILS_HOME="$LOCAL/grails"
GROOVY_HOME="$LOCAL/groovy"
JAVA_HOME="/usr/lib/jvm/java-6-sun"
M2_HOME="$LOCAL/maven"
MYSQL_HOME="/usr/local/mysql"
PHP_HOME="$LOCAL/php"
ZF_HOME="$HOME/Documents/workspace/ZendFramework-1.10.4"
POSTGRESQL_HOME="/usr/local/postgresql"
SCALA_HOME="$LOCAL/scala"
SVN_HOME="/opt/subversion"
ANDROID_HOME="$LOCAL/android-sdk"

MAVEN_OPTS="-Xms512m -Xmx1024m -XX:PermSize=256m -XX:MaxPermSize=512m"

##
# Git
##
GIT_HOME="/usr/local"
GIT_COMMITTER_NAME="Dan Hansen"
GIT_COMMITTER_EMAIL="dan@planettelex.net"
GIT_AUTHOR_NAME="Dan Hansen"
GIT_AUTHOR_EMAIL="dan@planettelex.net"

##
# OS specific exports
##
if [[ "$PLATFORM" == 'osx' ]]; then
	JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home"
	PATH="/Library/Application Support/VMware Fusion:$PATH"

	CFLAGS="-arch x86_64"
	export CFLAGS
fi

PATH="$MYSQL_HOME/bin:$POSTGRESQL_HOME/bin:/usr/local/bin:/usr/local/sbin:$PATH"
PATH="$LOCAL/bin:$ANT_HOME/bin:$M2_HOME/bin:$GROOVY_HOME/bin:$PATH"
PATH="$GRAILS_HOME/bin:$SVN_HOME/bin:$SCALA_HOME/bin:$ANDROID_HOME/tools:$PHP_HOME/bin:$ZF_HOME/bin:$PATH"
MANPATH="/usr/local/man:/usr/local/share/man:$MYSQL_HOME/man:$MANPATH"

export HISTFILE EDITOR SVN_EDITOR LSCOLORS JAVA_HOME M2_HOME
export APPENGINE_HOME ANDROID_HOME GROOVY_HOME GRAILS_HOME SCALA_HOME MAVEN_OPTS

export HISTSIZE=100000
export SAVEHIST=100000
export HISTFILE=$HOME/.shell_history
export GIT_COMMITTER_NAME GIT_COMMITTER_EMAIL GIT_AUTHOR_NAME GIT_AUTHOR_EMAIL

function mvn() { ( export GRAILS_HOME= ; $M2_HOME/bin/mvn "$@" ;  ) }
