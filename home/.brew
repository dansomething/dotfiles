#!/usr/bin/env bash

# Install command-line tools using Homebrew.

hash brew >/dev/null 2>&1 || {
  echo "Installing Homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
}

# Make sure we’re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade

# Save Homebrew’s installed location.
BREW_PREFIX=$(brew --prefix)

# Install GNU core utilities (those that come with macOS are outdated).
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
brew install coreutils
# Install some other useful utilities like `sponge`.
brew install moreutils
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, `g`-prefixed.
brew install findutils
# Install a modern version of Bash.
brew install bash
brew install bash-completion@2

# Switch to using brew-installed bash as default shell
if ! grep -F -q "${BREW_PREFIX}/bin/bash" /etc/shells; then
  echo "${BREW_PREFIX}/bin/bash" | sudo tee -a /etc/shells;
  chsh -s "${BREW_PREFIX}/bin/bash";
fi;

# Install more recent versions of some macOS tools.
brew install git
brew install grep
brew install openssh
brew install --HEAD universal-ctags/universal-ctags/universal-ctags

# Install other useful binaries.
brew install bash-git-prompt
brew install bat
brew install exa
brew install fasd
brew install fzf
$(brew --prefix)/opt/fzf/install
brew install gawk # for Morantron/tmux-fingers
brew install git-delta
brew install gnu-sed # for vim mergetool diffconflicts script
brew install grc
brew install gron
brew install hub
brew install htop
brew install jq
brew install ncdu
brew install neomutt
brew install neovim
brew install nvm
brew install nodejs
brew install pv
brew install ripgrep
brew install reattach-to-user-namespace
brew install shellcheck
brew install sqlparse
brew install rename
brew install terminal-notifier
brew install the_silver_searcher
brew install tidy-html5
brew install tmux
brew install tmux-mem-cpu-load
brew install tree
brew install urlview # for viewing attachements from mutt/neomutt
brew install watch
brew install watchman
brew install yamllint
brew install yarn

# Remove outdated versions from the cellar.
brew cleanup
