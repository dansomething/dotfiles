#!/usr/bin/env bash

hash brew >/dev/null 2>&1 || {
  echo "Installing Homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
}

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."
brew install moreutils
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
ln -s /usr/local/bin/gfind /usr/local/bin/find

# Install Bash 4
brew install bash
brew install bash-completion
# Make Brew's bash the default shell
sudo su - root -c 'echo "/usr/local/bin/bash\n" >> /etc/shells'
chsh -s /usr/local/bin/bash

# Install wget with IRI support
brew install wget --enable-iri

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep

# Install utils
brew install bash-git-prompt
brew install cmake
brew install ctags
brew install diff-so-fancy
brew install fasd
brew install git
brew install golang --cross-compile-all
brew install grc
brew install hub
brew install neovim
brew install nvm
brew install reattach-to-user-namespace
brew install rename
brew install shellcheck
brew install sqlparse
brew install the_silver_searcher
brew install tmux
brew install tmux-mem-cpu-load
brew install tree
brew install vim --override-system-vi

# Link apps to the Applications folder
brew linkapps

# Remove outdated versions from the cellar
brew cleanup
