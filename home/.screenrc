# use visual bell
 vbell on
# turn off the splash screen
 startup_message off
# detach on hangup
 autodetach on
# set a big scrolling buffer
 defscrollback 5000
# set the caption on the bottom line
 hardstatus on
 caption always "%{= bw}%-w%{= rW}%n %t%{-}%+w %-= %H  %Lm/%d  %l  %C%a"
 
 bindkey -k k1 prev
 bindkey -k k2 next
# fix scrolling
 termcapinfo xterm ti@:te@

# change the escape key
 escape ``
