#!/bin/bash

BAK_UTIL="/home/dhansen/Local/bin/svn-hot-backup.py"
REPO="/srv/svn/repositories"
BAK_DIR="/backups/svn-repos"

mkdir $BAK_DIR -p
for repostobackup in `ls $REPO/` ; do
filename=`basename ${repostobackup}`
if [ ! $filename = "" ]; then
	$BAK_UTIL --archive-type=bz2 ${REPO}/${filename} ${BAK_DIR}
fi
done
