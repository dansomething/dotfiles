##
# MISC 
##
alias ls="ls -a --color=auto"
alias ll="ls -lh"
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias top="sudo atop"
alias gv="mvim"
alias vi="vim"
alias grep="grep -n --color=auto"

##
# MySQL
##
alias mysql="mysql -p"
alias mysqldump="mysqldump -p"

##
# SVN
##
alias svnm="svn st -u"  	        # Show all locally modified items
alias svns="svn st -u -v"   	  	# Show status of all items
alias svnl="svn log -r 1:HEAD -v"	# Show log messages
alias nosvn="grep -v .svn"

##
# CVS
##
alias cvss="cvs -q status | grep File | cgrep -v Up-to"
alias cvsu="cvs log -d '>2006/06/01' | cgrep -B2 -A4 'author: dan' > updates.txt"

##
# MISC
##
alias findphp="find . -type f -name '*.php'"
alias findgroovy="find . -type f -name '*.groovy'"
alias flushcache="sudo dscacheutil -flushcache"
alias waiting="ps ax | sed '1p;/ [U] /!d'"
alias post-review="post-review --server=http://localhost"

##
# OS specific aliases
##
if [[ "$PLATFORM" == 'osx' ]]; then
	alias ls="ls -aG"
	alias top="top -ocpu -O+rsize -s 5 -n 20"
	alias gvim="mvim"
	alias tab="term -t"
fi
