##
# MISC 
##
alias ls="ls -aG"
alias ll="ls -lh"
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias top="top -ocpu -O+rsize -s 5 -n 20"
alias gv="mvim"
alias vi="vim"

##
# MySQL
##
alias mysql="mysql -p"
alias mysqldump="mysqldump -p"

##
# SVN
##
alias svnm="svn st -u -q"           # Show all locally modified items
alias svns="svn st -u -q -v"        # Show status of all items
alias svnl="svn log -r 1:HEAD -v"   # Show log messages
alias nosvn="grep -v .svn"

##
# CVS
##
alias cvss="cvs -q status | grep File | cgrep -v Up-to"
alias cvsu="cvs log -d '>2006/06/01' | cgrep -B2 -A4 'author: dan' > updates.txt"

##
# MISC
##
alias findphp="find -type f -name '*.php'"
alias flushcache="sudo dscacheutil -flushcache"
alias waiting="ps ax | sed '1p;/ [U] /!d'"
alias post-review="post-review --server=https://codereview.beatportcorp.net"

##
# PHPMAVEN
##
alias phpmvnweb="mvn archetype:generate \
-DarchetypeGroupId=org.phpmaven \
-DarchetypeArtifactId=php5-web-archetype \
-DarchetypeVersion=1.0-SNAPSHOT"
#-DarchetypeRepository=http://repo1.php-maven.org/snapshot"

alias phpmvnlib="mvn archetype:generate \
-DarchetypeGroupId=org.phpmaven \
-DarchetypeArtifactId=php5-lib-archetype \
-DarchetypeVersion=1.0-SNAPSHOT"
#-DarchetypeRepository=http://repo1.php-maven.org/release"

